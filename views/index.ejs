<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tarefas</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Lista de Tarefas</h1>

        <!-- Filtro de Tarefas -->
        <form action="/" method="GET" class="mb-4">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <label for="status" class="form-label">Filtrar Tarefas por Status:</label>
                    <select name="status" id="status" class="form-select">
                        <option value="all" <%= filtroSelecionado === 'all' ? 'selected' : '' %>>Todas</option>
                        <option value="true" <%= filtroSelecionado === 'true' ? 'selected' : '' %>>True</option>
                        <option value="false" <%= filtroSelecionado === 'false' ? 'selected' : '' %>>False</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                </div>
            </div>
        </form>

        <!-- Lista de Tarefas -->
        <ul class="list-group">
            <% if (tarefas.length > 0) { %>
                <% tarefas.forEach((tarefa, index) => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <%= tarefa.descricao %> - <strong><%= tarefa.status ? 'True' : 'False' %></strong>
                        </span>
                        <span>
                            <a href="/tarefa/<%= index %>/editar" class="btn btn-warning btn-sm">Editar</a>
                            <form action="/tarefa/<%= index %>/excluir" method="post" class="d-inline" onsubmit="return confirmarExclusao(event, <%= index %>, '<%= tarefa.descricao %>');">
                                <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                            </form>
                        </span>
                    </li>
                <% }); %>
            <% } else { %>
                <li class="list-group-item">Nenhuma tarefa encontrada</li>
            <% } %>
        </ul>

        <div class="mt-4">
            <a href="/tarefa/nova" class="btn btn-success">Adicionar tarefa</a>
        </div>

        <script>
            function confirmarExclusao(event, id, descricao) {
                event.preventDefault(); // Impede o envio do formulário padrão

                // Exibe o popup de confirmação
                Swal.fire({
                    title: 'Tem certeza?',
                    text: `Você está prestes a excluir a tarefa: "${descricao}" (ID: ${id})`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Sim, excluir!',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Se confirmado, envia o formulário
                        event.target.submit(); // Envia o formulário de exclusão
                    }
                });
            }
        </script>
    </div>
</body>
</html>
