<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nova Tarefa</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="container mt-5">

        <h1 class="text-center mb-4">Cadastrar Nova Tarefa</h1>

        <!-- Formulário de Cadastro -->
        <form id="form-tarefa" action="/tarefa" method="POST" class="border p-4 shadow-sm rounded">
            
            <!-- Campo de Descrição -->
            <div class="mb-3">
                <label for="descricao" class="form-label">Descrição da Tarefa:</label>
                <input type="text" id="descricao" name="tarefa[descricao]" class="form-control" placeholder="Digite a descrição da tarefa" required>
            </div>

            <!-- Campo de Status -->
            <div class="mb-3">
                <label class="form-label">Status da Tarefa:</label>
                <div class="form-check">
                    <input type="radio" id="status_true" name="tarefa[status]" value="true" class="form-check-input" checked>
                    <label for="status_true" class="form-check-label">True</label>
                </div>
                <div class="form-check">
                    <input type="radio" id="status_false" name="tarefa[status]" value="false" class="form-check-input">
                    <label for="status_false" class="form-check-label">False</label>
                </div>
            </div>

            <!-- Botão de Submissão -->
            <button type="submit" class="btn btn-primary">Adicionar Tarefa</button>
            <a href="/" class="btn btn-secondary ms-2">Voltar</a>
        </form>

    </div>

    <script>
        document.getElementById('form-tarefa').addEventListener('submit', function(event) {
            event.preventDefault();  // Previne o envio padrão do formulário

            // Captura os dados do formulário
            var formData = new FormData(this);

            // Faz a requisição POST para o backend
            fetch('/tarefa', {
                method: 'POST',
                body: JSON.stringify({
                    tarefa: {
                        descricao: formData.get('tarefa[descricao]'),
                        status: formData.get('tarefa[status]')
                    }
                }),
                headers: {
                    'Content-Type': 'application/json'
                }
            }).then(response => {
                // Verifica o status da resposta
                if (!response.ok) {
                    return response.json().then(data => { throw new Error(data.message); });
                }
                return response.json();
            }).then(data => {
                // Exibe o popup de sucesso
                Swal.fire({
                    title: 'Sucesso!',
                    text: data.message,
                    icon: 'success',
                    confirmButtonText: 'Ok'
                }).then(() => {
                    // Redireciona para a página principal após clicar em "Ok"
                    window.location.href = '/';
                });
            }).catch(error => {
                // Exibe o popup de erro
                Swal.fire({
                    title: 'Erro!',
                    text: error.message,
                    icon: 'error',
                    confirmButtonText: 'Ok'
                });
            });
        });
    </script>
</body>
</html>
